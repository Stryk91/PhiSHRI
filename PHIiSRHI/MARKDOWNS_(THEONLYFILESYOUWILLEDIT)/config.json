{
  "mcp_server": {
    "name": "screen-control",
    "version": "1.0.0",
    "description": "PhiLaunch MCP Screen Control Server"
  },

  "safety": {
    "require_confirmation": true,
    "allowed_areas": null,
    "max_actions_per_minute": 30,
    "screenshot_before_action": true,
    "record_all_actions": true,
    "failsafe_enabled": true,
    "pause_between_actions": 0.1
  },

  "ocr": {
    "engine": "tesseract",
    "language": "eng",
    "confidence_threshold": 60,
    "preprocessing": {
      "grayscale": true,
      "denoise": false,
      "threshold": false
    }
  },

  "mouse": {
    "movement_duration": 0.3,
    "click_delay": 0.1,
    "double_click_interval": 0.3,
    "scroll_amount": 3
  },

  "keyboard": {
    "typing_interval": 0.0,
    "key_press_duration": 0.1
  },

  "screenshot": {
    "auto_save": true,
    "save_directory": "screenshots",
    "format": "png",
    "quality": 95,
    "max_stored": 100
  },

  "logging": {
    "level": "INFO",
    "file": "logs/screen_mcp_server.log",
    "max_size_mb": 50,
    "backup_count": 5,
    "console_output": true
  },

  "gui": {
    "theme": "default",
    "window_size": "1400x900",
    "auto_screenshot_interval": 5,
    "max_log_entries": 1000,
    "highlight_color": "#FF0000",
    "highlight_duration": 2.0
  },

  "integration": {
    "claude_desktop": {
      "enabled": true,
      "server_path": "server/screen_mcp_server.py"
    },
    "remote_access": {
      "enabled": false,
      "port": 8765,
      "ssl_enabled": false
    }
  },

  "calibration": {
    "screen_resolution": null,
    "dpi_scale": 1.0,
    "color_profile": "sRGB",
    "ocr_training_data": null
  },

  "safety_zones": {
    "enabled": false,
    "zones": []
  },

  "accessibility": {
    "screen_reader_compatible": true,
    "high_contrast_mode": false,
    "large_text": false
  }
}
