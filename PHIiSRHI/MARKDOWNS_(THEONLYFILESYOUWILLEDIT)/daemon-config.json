{
  "daemon": {
    "enabled": true,
    "check_interval": 5,
    "max_log_size_mb": 10,
    "log_retention_days": 30
  },
  "file_watchers": [
    {
      "name": "Downloads Monitor",
      "enabled": true,
      "path": "C:\\Users\\YourUsername\\Downloads",
      "filter": "*.*",
      "include_subdirectories": false,
      "notify_filters": ["FileName", "LastWrite", "CreationTime"],
      "events": ["Created", "Changed", "Deleted", "Renamed"],
      "actions": [
        {
          "type": "log",
          "message": "File {FileName} was {EventType} in Downloads at {Timestamp}"
        },
        {
          "type": "notification",
          "title": "File Change Detected",
          "message": "{FileName} was {EventType}"
        }
      ]
    },
    {
      "name": "Documents Backup Trigger",
      "enabled": false,
      "path": "C:\\Users\\YourUsername\\Documents",
      "filter": "*.docx",
      "include_subdirectories": true,
      "notify_filters": ["LastWrite"],
      "events": ["Changed"],
      "actions": [
        {
          "type": "log",
          "message": "Document {FileName} was modified - triggering backup"
        },
        {
          "type": "script",
          "path": "C:\\AutomationSuite\\PowerShell\\Scripts\\Automation\\Backup-UserData.ps1",
          "arguments": "-SourcePaths '{FullPath}' -DestinationPath 'D:\\Backups'"
        }
      ]
    },
    {
      "name": "Temp Files Cleanup",
      "enabled": true,
      "path": "C:\\Users\\YourUsername\\AppData\\Local\\Temp",
      "filter": "*.*",
      "include_subdirectories": false,
      "notify_filters": ["CreationTime"],
      "events": ["Created"],
      "actions": [
        {
          "type": "log",
          "message": "New temp file created: {FileName}"
        }
      ]
    }
  ],
  "process_watchers": [
    {
      "name": "High CPU Monitor",
      "enabled": true,
      "process_name": "*",
      "cpu_threshold": 80,
      "memory_threshold_mb": 2000,
      "check_interval": 10,
      "actions": [
        {
          "type": "log",
          "message": "Process {ProcessName} exceeded thresholds - CPU: {CPU}%, Memory: {Memory}MB"
        },
        {
          "type": "notification",
          "title": "High Resource Usage",
          "message": "{ProcessName} is using {CPU}% CPU and {Memory}MB memory"
        }
      ]
    },
    {
      "name": "Chrome Memory Monitor",
      "enabled": false,
      "process_name": "chrome",
      "cpu_threshold": 50,
      "memory_threshold_mb": 1500,
      "check_interval": 30,
      "actions": [
        {
          "type": "log",
          "message": "Chrome is using excessive resources - CPU: {CPU}%, Memory: {Memory}MB"
        }
      ]
    },
    {
      "name": "Critical Process Monitor",
      "enabled": false,
      "process_name": "explorer",
      "cpu_threshold": 100,
      "memory_threshold_mb": 10000,
      "check_interval": 5,
      "actions": [
        {
          "type": "log",
          "message": "Explorer.exe status check - CPU: {CPU}%, Memory: {Memory}MB"
        },
        {
          "type": "command",
          "command": "if ((Get-Process explorer -ErrorAction SilentlyContinue) -eq $null) { Start-Process explorer.exe }"
        }
      ]
    }
  ],
  "scheduled_tasks": [
    {
      "name": "Daily System Cleanup",
      "enabled": false,
      "schedule": "daily",
      "time": "02:00",
      "actions": [
        {
          "type": "script",
          "path": "C:\\AutomationSuite\\PowerShell\\Scripts\\Core\\Clean-SystemFiles.ps1",
          "arguments": "-IncludeBrowserCache -IncludeRecycleBin"
        }
      ]
    },
    {
      "name": "Weekly Backup",
      "enabled": false,
      "schedule": "weekly",
      "day": "Sunday",
      "time": "03:00",
      "actions": [
        {
          "type": "script",
          "path": "C:\\AutomationSuite\\PowerShell\\Scripts\\Automation\\Backup-UserData.ps1",
          "arguments": "-SourcePaths 'C:\\Users\\YourUsername\\Documents' -DestinationPath 'D:\\Backups'"
        }
      ]
    },
    {
      "name": "Hourly System Info Log",
      "enabled": false,
      "schedule": "hourly",
      "actions": [
        {
          "type": "script",
          "path": "C:\\AutomationSuite\\PowerShell\\Scripts\\Core\\Get-SystemInfo.ps1",
          "arguments": "-ExportPath 'C:\\Logs\\SystemInfo.txt' -Format Text"
        }
      ]
    }
  ],
  "variables": {
    "user_home": "C:\\Users\\YourUsername",
    "temp_path": "C:\\Users\\YourUsername\\AppData\\Local\\Temp",
    "automation_path": "C:\\AutomationSuite",
    "backup_destination": "D:\\Backups",
    "log_path": "C:\\Logs"
  },
  "triggers": [
    {
      "name": "Low Disk Space Alert",
      "enabled": true,
      "type": "disk_space",
      "drive": "C:",
      "threshold_percent": 10,
      "check_interval": 300,
      "actions": [
        {
          "type": "notification",
          "title": "Low Disk Space Warning",
          "message": "Drive C: has less than 10% free space remaining"
        },
        {
          "type": "log",
          "message": "Low disk space warning triggered for C: drive"
        }
      ]
    },
    {
      "name": "Network Connection Monitor",
      "enabled": false,
      "type": "network",
      "check_interval": 60,
      "actions": [
        {
          "type": "log",
          "message": "Network connectivity check performed"
        }
      ]
    }
  ],
  "rules": [
    {
      "name": "Auto-organize Downloads",
      "enabled": false,
      "condition": {
        "type": "file_created",
        "path": "C:\\Users\\YourUsername\\Downloads",
        "extensions": [".jpg", ".png", ".gif", ".pdf", ".docx"]
      },
      "actions": [
        {
          "type": "script",
          "path": "C:\\AutomationSuite\\PowerShell\\Scripts\\Core\\Manage-Files.ps1",
          "arguments": "-Action Organize -Path 'C:\\Users\\YourUsername\\Downloads' -OrganizeBy Extension"
        }
      ]
    }
  ]
}