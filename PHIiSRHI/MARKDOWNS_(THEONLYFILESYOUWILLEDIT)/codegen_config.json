{
  "version": "1.0.0",
  "description": "AI-assisted code generation configuration for PhiLaunch",
  "offline_mode": true,
  "git_aware": true,

  "languages": {
    "powershell": {
      "enabled": true,
      "version": "7.0",
      "style": {
        "indent": "    ",
        "brace_style": "otbs",
        "max_line_length": 120,
        "use_approved_verbs": true,
        "require_comment_help": true
      },
      "analysis": {
        "use_psscriptanalyzer": true,
        "severity_threshold": "Warning",
        "rules": ["PSAvoidUsingCmdletAliases", "PSUseDeclaredVarsMoreThanAssignments"]
      },
      "security": {
        "check_command_injection": true,
        "validate_parameters": true,
        "require_error_handling": true
      }
    },
    "javascript": {
      "enabled": true,
      "version": "ES2022",
      "style": {
        "indent": "  ",
        "semicolons": true,
        "quotes": "single",
        "max_line_length": 100,
        "trailing_comma": "es5"
      },
      "analysis": {
        "use_eslint": true,
        "config": "eslint:recommended",
        "plugins": ["security"]
      },
      "security": {
        "check_xss": true,
        "check_injection": true,
        "validate_input": true
      }
    },
    "autohotkey": {
      "enabled": true,
      "version": "v2",
      "style": {
        "indent": "    ",
        "brace_style": "otbs",
        "max_line_length": 120
      },
      "security": {
        "validate_file_paths": true,
        "check_command_execution": true
      }
    },
    "python": {
      "enabled": true,
      "version": "3.10",
      "style": {
        "indent": "    ",
        "max_line_length": 88,
        "follow_pep8": true,
        "use_type_hints": true
      },
      "analysis": {
        "use_pylint": true,
        "use_mypy": true,
        "use_bandit": true
      },
      "security": {
        "check_injection": true,
        "validate_paths": true,
        "check_pickle_usage": true
      }
    },
    "bash": {
      "enabled": true,
      "version": "5.0",
      "style": {
        "indent": "  ",
        "max_line_length": 100,
        "use_shellcheck": true
      },
      "security": {
        "check_command_injection": true,
        "validate_variables": true,
        "quote_expansions": true
      }
    }
  },

  "command_categories": {
    "get": {
      "description": "Retrieval and query operations",
      "verbs": ["Get", "Read", "List", "Find", "Search", "Query", "Fetch", "Retrieve", "Show", "Display"],
      "patterns": ["get", "retrieve", "fetch", "list", "show", "find", "search", "query", "read", "display"]
    },
    "set": {
      "description": "Modification and configuration operations",
      "verbs": ["Set", "Update", "Modify", "Configure", "Change", "Edit", "Adjust", "Alter"],
      "patterns": ["set", "update", "modify", "configure", "change", "edit", "adjust", "alter", "write"]
    },
    "remove": {
      "description": "Deletion and cleanup operations",
      "verbs": ["Remove", "Delete", "Clear", "Clean", "Purge", "Uninstall", "Erase"],
      "patterns": ["remove", "delete", "clear", "clean", "purge", "uninstall", "erase", "drop"]
    },
    "run": {
      "description": "Execution and processing operations",
      "verbs": ["Start", "Invoke", "Execute", "Run", "Launch", "Process", "Trigger", "Call"],
      "patterns": ["run", "start", "execute", "invoke", "launch", "process", "trigger", "call", "perform"]
    },
    "test": {
      "description": "Testing and validation operations",
      "verbs": ["Test", "Validate", "Verify", "Check", "Assert", "Confirm"],
      "patterns": ["test", "validate", "verify", "check", "assert", "confirm", "ensure"]
    },
    "new": {
      "description": "Creation and initialization operations",
      "verbs": ["New", "Create", "Initialize", "Build", "Generate", "Make", "Add"],
      "patterns": ["new", "create", "initialize", "build", "generate", "make", "add", "install"]
    }
  },

  "design_patterns": {
    "singleton": {
      "description": "Ensures a class has only one instance",
      "applicable_languages": ["powershell", "javascript", "python"],
      "use_cases": ["configuration", "logging", "connection_pool"]
    },
    "factory": {
      "description": "Creates objects without specifying exact class",
      "applicable_languages": ["powershell", "javascript", "python"],
      "use_cases": ["object_creation", "plugin_system", "abstract_types"]
    },
    "observer": {
      "description": "Notifies multiple objects about state changes",
      "applicable_languages": ["javascript", "python", "powershell"],
      "use_cases": ["event_handling", "pub_sub", "reactive_updates"]
    },
    "strategy": {
      "description": "Defines family of algorithms, makes them interchangeable",
      "applicable_languages": ["all"],
      "use_cases": ["sorting", "validation", "formatting"]
    },
    "decorator": {
      "description": "Adds behavior to objects dynamically",
      "applicable_languages": ["python", "javascript"],
      "use_cases": ["caching", "logging", "validation"]
    }
  },

  "code_generation": {
    "max_function_length": 50,
    "require_documentation": true,
    "generate_tests": true,
    "test_coverage_target": 80,
    "include_error_handling": true,
    "include_logging": true,
    "include_parameter_validation": true,
    "preserve_existing_code": true,
    "incremental_mode": true
  },

  "refactoring": {
    "safe_mode": true,
    "require_confirmation": true,
    "backup_before_refactor": true,
    "max_complexity": 10,
    "extract_function_threshold": 20,
    "rename_scope": "file"
  },

  "testing": {
    "frameworks": {
      "powershell": "Pester",
      "javascript": "Jest",
      "python": "pytest",
      "bash": "bats"
    },
    "generate_mocks": true,
    "generate_fixtures": true,
    "snapshot_testing": true,
    "coverage_reporting": true
  },

  "documentation": {
    "format": "markdown",
    "include_examples": true,
    "include_parameters": true,
    "include_return_values": true,
    "include_exceptions": true,
    "generate_changelog": true,
    "api_doc_style": "jsdoc"
  },

  "security": {
    "scan_level": "strict",
    "check_owasp_top10": true,
    "vulnerability_database": "local",
    "common_vulnerabilities": {
      "command_injection": true,
      "xss": true,
      "sql_injection": true,
      "path_traversal": true,
      "xxe": true,
      "deserialization": true,
      "weak_crypto": true,
      "hardcoded_secrets": true
    }
  },

  "performance": {
    "profile_code": true,
    "identify_bottlenecks": true,
    "suggest_optimizations": true,
    "max_cyclomatic_complexity": 10,
    "max_nesting_depth": 4
  },

  "remote_execution": {
    "ssh_compatible": true,
    "background_execution": true,
    "status_reporting": true,
    "log_output": true
  },

  "output": {
    "verbose": false,
    "color_output": true,
    "show_warnings": true,
    "log_file": "codegen/logs/codegen.log"
  }
}
