    {
      "name": "Automation Workflow Profile",
      "description": "Macros for triggering automation scripts",
      "macros": [
        {
          "id": "macro_401",
          "name": "Run System Cleanup",
          "trigger": "G1",
          "actions": [
            {
              "type": "keypress",
              "keys": ["Win", "R"],
              "delay": 100
            },
            {
              "type": "text",
              "text": "powershell -File &quot;C:\\AutomationSuite\\PowerShell\\Scripts\\Core\\Clean-SystemFiles.ps1&quot;",
              "delay": 100
            },
            {
              "type": "keypress",
              "keys": ["Enter"],
              "delay": 0
            }
          ],
          "description": "Runs system cleanup script"
        },
        {
          "id": "macro_402",
          "name": "Get System Info",
          "trigger": "G2",
          "actions": [
            {
              "type": "keypress",
              "keys": ["Win", "R"],
              "delay": 100
            },
            {
              "type": "text",
              "text": "powershell -File &quot;C:\\AutomationSuite\\PowerShell\\Scripts\\Core\\Get-SystemInfo.ps1&quot;",
              "delay": 100
            },
            {
              "type": "keypress",
              "keys": ["Enter"],
              "delay": 0
            }
          ],
          "description": "Displays system information"
        },
        {
          "id": "macro_403",
          "name": "Start Backup",
          "trigger": "G3",
          "actions": [
            {
              "type": "keypress",
              "keys": ["Win", "R"],
              "delay": 100
