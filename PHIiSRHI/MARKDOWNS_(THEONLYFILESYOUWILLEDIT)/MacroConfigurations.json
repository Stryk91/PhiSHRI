              "delay": 100
            },
            {
              "type": "keypress",
              "keys": ["Enter"],
              "delay": 0
            }
          ],
          "description": "Opens PowerToys settings"
        },
        {
          "id": "macro_405",
          "name": "Restart Explorer",
          "trigger": "G5",
          "actions": [
            {
              "type": "keypress",
              "keys": ["Ctrl", "Shift", "Esc"],
              "delay": 500
            },
            {
              "type": "text",
              "text": "explorer.exe",
              "delay": 200
            },
            {
              "type": "keypress",
              "keys": ["Enter"],
              "delay": 100
            },
            {
              "type": "keypress",
              "keys": ["Delete"],
              "delay": 500
            },
            {
              "type": "keypress",
              "keys": ["Alt", "F4"],
              "delay": 0
            }
          ],
          "description": "Restarts Windows Explorer"
        }
      ]
