{
  "macro_profiles": [
    {
      "name": "Productivity Profile",
      "description": "Macros for productivity and automation tasks",
      "macros": [
        {
          "id": "macro_001",
          "name": "Quick Screenshot",
          "trigger": "G1",
          "actions": [
            {
              "type": "keypress",
              "keys": ["Win", "Shift", "S"],
              "delay": 0
            }
          ],
          "description": "Takes a screenshot using Windows Snipping Tool"
        },
        {
          "id": "macro_002",
          "name": "Open Task Manager",
          "trigger": "G2",
          "actions": [
            {
              "type": "keypress",
              "keys": ["Ctrl", "Shift", "Esc"],
              "delay": 0
            }
          ],
          "description": "Opens Windows Task Manager"
        },
        {
          "id": "macro_003",
          "name": "Lock Workstation",
          "trigger": "G3",
          "actions": [
            {
              "type": "keypress",
              "keys": ["Win", "L"],
              "delay": 0
            }
          ],
          "description": "Locks the computer"
        },
        {
          "id": "macro_004",
          "name": "Minimize All Windows",
          "trigger": "G4",
          "actions": [
            {
              "type": "keypress",
              "keys": ["Win", "D"],
              "delay": 0
            }
          ],
          "description": "Shows desktop by minimizing all windows"
        },
        {
          "id": "macro_005",
          "name": "Switch Virtual Desktop Left",
          "trigger": "G5",
          "actions": [
            {
              "type": "keypress",
              "keys": ["Win", "Ctrl", "Left"],
              "delay": 0
            }
          ],
          "description": "Switches to the previous virtual desktop"
        },
        {
          "id": "macro_006",
          "name": "Switch Virtual Desktop Right",
          "trigger": "G6",
          "actions": [
            {
              "type": "keypress",
              "keys": ["Win", "Ctrl", "Right"],
              "delay": 0
            }
          ],
          "description": "Switches to the next virtual desktop"
        }
      ]
    },
    {
      "name": "Development Profile",
      "description": "Macros for software development workflows",
      "macros": [
        {
          "id": "macro_101",
          "name": "Open Terminal",
          "trigger": "G1",
          "actions": [
            {
              "type": "keypress",
              "keys": ["Win", "Ctrl", "Shift", "T"],
              "delay": 0
            }
          ],
          "description": "Opens Windows Terminal"
        },
        {
          "id": "macro_102",
          "name": "Run Build Command",
          "trigger": "G2",
          "actions": [
            {
              "type": "text",
              "text": "npm run build",
              "delay": 0
            },
            {
              "type": "keypress",
              "keys": ["Enter"],
              "delay": 100
            }
          ],
          "description": "Types and executes npm build command"
        },
        {
          "id": "macro_103",
          "name": "Git Status",
          "trigger": "G3",
          "actions": [
            {
              "type": "text",
              "text": "git status",
              "delay": 0
            },
            {
              "type": "keypress",
              "keys": ["Enter"],
              "delay": 100
            }
          ],
          "description": "Checks git repository status"
        },
        {
          "id": "macro_104",
          "name": "Comment Block",
          "trigger": "G4",
          "actions": [
            {
              "type": "text",
              "text": "/**\n * \n */",
              "delay": 0
            },
            {
              "type": "keypress",
              "keys": ["Up"],
              "delay": 50
            },
            {
              "type": "keypress",
              "keys": ["End"],
              "delay": 50
            }
          ],
          "description": "Inserts a comment block and positions cursor"
        },
        {
          "id": "macro_105",
          "name": "Console Log",
          "trigger": "G5",
          "actions": [
            {
              "type": "text",
              "text": "console.log();",
              "delay": 0
            },
            {
              "type": "keypress",
              "keys": ["Left", "Left"],
              "delay": 50
            }
          ],
          "description": "Inserts console.log statement"
        },
        {
          "id": "macro_106",
          "name": "Format Document",
          "trigger": "G6",
          "actions": [
            {
              "type": "keypress",
              "keys": ["Shift", "Alt", "F"],
              "delay": 0
            }
          ],
          "description": "Formats document in VS Code"
        }
      ]
    },
