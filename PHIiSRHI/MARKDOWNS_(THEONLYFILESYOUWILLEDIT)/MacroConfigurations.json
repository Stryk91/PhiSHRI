              "delay": 100
            },
            {
              "type": "keypress",
              "keys": ["Enter"],
              "delay": 0
            }
          ],
          "description": "Starts backup process"
        },
        {
          "id": "macro_404",
          "name": "Open PowerToys Settings",
          "trigger": "G4",
          "actions": [
            {
              "type": "keypress",
              "keys": ["Win", "R"],
              "delay": 100
            },
            {
              "type": "text",
